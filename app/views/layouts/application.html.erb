<!DOCTYPE html>
<html>
  <head>
    <title>MD</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <%= link_to "Write a story", new_post_path %>
      <% if user_signed_in? %>
        <%= current_user.email %>
      <% end %>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
